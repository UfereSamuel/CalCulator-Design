<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/background_dark"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:text="0.0"
            android:textSize="45sp"
            android:layout_margin="10dp"
            android:gravity="bottom|right"
            android:layout_gravity="bottom|right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/ac"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:text="AC"
                android:background="#FF9800"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/slh"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/ac"
                android:background="#FF9800"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"
                android:text="*/-"
                />

            <Button
                android:id="@+id/mod"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/slh"
                android:text="%"
                android:background="#FF9800"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/div"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/mod"
                android:text="/"
                android:background="#FF9800"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/seven"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:text="7"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/seven"
                android:text="8"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/nine"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/eight"
                android:text="9"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/mult"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/nine"
                android:text="X"
                android:background="#FF9800"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/four"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:text="4"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/five"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/four"
                android:text="5"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/six"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/five"
                android:text="6"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/minus"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/six"
                android:text="-"
                android:background="#FF9800"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/one"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:text="1"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/two"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/one"
                android:text="2"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/three"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/two"
                android:text="3"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/plus"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/three"
                android:text="+"
                android:background="#FF9800"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/zero"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:text="0"
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/blnk"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/zero"
                android:text=""
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/dot"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/blnk"
                android:text="."
                android:background="#009688"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/dot"
                android:text="="
                android:background="#FF5722"
                android:textSize="35dp"
                android:textColor="@android:color/background_light"/>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>